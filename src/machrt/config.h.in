#ifndef MACHRT_CONFIG_H
#define MACHRT_CONFIG_H

#if (@FLOAT_SIZE@ == 8)
typedef float MAFlt;
#elif (@DOUBLE_SIZE@ == 8)
typedef double MAFlt;
#else
#error "Unable To Determine A Type For MAFlt"
#endif

#if (@CHAR_SIZE@ == 8)
typedef signed char MAInt;
#elif (@SHORT_SIZE@ == 8)
typedef signed short MAInt;
#elif (@INT_SIZE@ == 8)
typedef signed int MAInt;
#elif (@LONG_SIZE@ == 8)
typedef signed long MAInt;
#elif (@LLONG_SIZE@ == 8)
typedef signed long long MAInt;
#else
#error "Unable To Determine A Type For MAInt"
#endif

#define true ((Bool)1)
#define false ((Bool)0)
typedef unsigned char MABool;

#define MACHRT_API_VERSION_MAJOR @MACHRT_API_VERSION_MAJOR@
#define MACHRT_API_VERSION_MINOR @MACHRT_API_VERSION_MINOR@
#define MACHRT_API_VERSION_PATCH @MACHRT_API_VERSION_PATCH@
#define MACHRT_API_VERSION_TAG @MACHRT_API_VERSION_TAG@

#endif
