#ifndef MACHRT_CONFIG_H
#define MACHRT_CONFIG_H

#if (@FLOAT_SIZE@ == 8)
typedef float flt_t;
#elif (@DOUBLE_SIZE@ == 8)
typedef double flt_t;
#else
#error "Unable To Determine A Type For flt_t"
#endif

#if (@CHAR_SIZE@ == 8)
typedef signed char int_t;
#elif (@SHORT_SIZE@ == 8)
typedef signed short int_t;
#elif (@INT_SIZE@ == 8)
typedef signed int int_t;
#elif (@LONG_SIZE@ == 8)
typedef signed long int_t;
#elif (@LLONG_SIZE@ == 8)
typedef signed long long int_t;
#else
#error "Unable To Determine A Type For int_t"
#endif

#define MACHRT_API_VERSION_MAJOR @MACHRT_API_VERSION_MAJOR@
#define MACHRT_API_VERSION_MINOR @MACHRT_API_VERSION_MINOR@
#define MACHRT_API_VERSION_PATCH @MACHRT_API_VERSION_PATCH@
#define MACHRT_API_VERSION_TAG @MACHRT_API_VERSION_TAG@

#endif
